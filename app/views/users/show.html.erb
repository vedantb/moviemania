<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
        <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
        </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.reviews.any? %>
        <h3>Reviews: (<%= @user.reviews.count %>)</h3><br>
        <ol class="reviews">
          <%= render @reviews %>
        </ol>
        <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>